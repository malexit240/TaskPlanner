<Window x:Class="TaskPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" x:Name="Tree" HorizontalAlignment="Left" Height="auto" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto"/>
        <TextBox x:Name="taskname" HorizontalAlignment="Left" Height="23" Margin="2.333,56,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="parent_id" HorizontalAlignment="Left" Height="23" Margin="222.333,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="141.333,59,0,0" VerticalAlignment="Top" Width="75" Click="addTree_Click" Grid.Column="1"/>
        <Button x:Name="Update" Content="Button" HorizontalAlignment="Left" Margin="47.333,245,0,0" VerticalAlignment="Top" Width="75" Click="Update_Click" Grid.Column="1"/>
    </Grid>
</Window>
